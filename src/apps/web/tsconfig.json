{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@icons/*": ["public/icons/*"],
            "@components/*": ["app/(home)/components/*"],
            "@styles/*": ["app/styles/*"],
            "@assets/*": ["assets/*"],
            "@data/*": ["app/data/*"]
        },
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types"],
    "exclude": ["node_modules"]
}
